alias gc='git clone'
alias bc='bc -l'
alias py='python'
alias rget='rsync -aruPW server@10.0.9.2:/data/UniVR ~'
alias rput='rsync -aruPW $HOME/UniVR server@10.0.9.2:/data'
alias ffmpeg='ffmpeg -vaapi_device /dev/dri/renderD128 -hide_banner'
alias ffprobe='ffprobe -hide_banner'
alias mbsync='mbsync -c $XDG_CONFIG_HOME/isync/mbsyncrc'
alias wget='wget --hsts-file=$XDG_DATA_HOME/wget-hsts'
alias svn='svn --config-dir $XDG_CONFIG_HOME/subversion'
